<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorBetweenPrimaryAndPrimaryDark">@color/colorBetweenPrimaryAndPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorTextBlack">@color/colorTextBlack</item>
        <item name="colorTextWhite">@color/colorTextWhite</item>
        <item name="colorTextGray">@color/colorTextGray</item>

        <item name="colorPrimaryTrans">@color/colorPrimaryTrans</item>
        <item name="colorBetweenPrimaryAndPrimaryDarkTrans">@color/colorBetweenPrimaryAndPrimaryDarkTrans</item>
        <item name="colorPrimaryDarkTrans">@color/colorPrimaryDarkTrans</item>
        <item name="colorAccentTrans">@color/colorAccentTrans</item>
        <item name="colorTextBlackTrans">@color/colorTextBlackTrans</item>
        <item name="colorTextWhiteTrans">@color/colorTextWhiteTrans</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>
