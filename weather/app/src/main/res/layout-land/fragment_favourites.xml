<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <GridLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="1"
        android:columnCount="4"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="6"
            android:layout_rowWeight="1"
            android:layout_columnSpan="3"
            >
            <ListView
                android:id="@+id/list_view_list"
                android:background="@drawable/relative_layout_rounded_corners"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice">
            </ListView>
        </RelativeLayout>

        <GridLayout
            android:id="@+id/favourites_fragment_delete_layout"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:rowCount="3"
            android:columnCount="1"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            >

            <RelativeLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                >
                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/delete_button_selector"
                    android:text="@string/cancel_favs"
                    android:drawableStart="@drawable/ic_baseline_cancel_24"
                    android:drawableTint="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="10dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    >

                </Button>
            </RelativeLayout>
            <RelativeLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                >
                <Button
                    android:id="@+id/button_select_all"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="@drawable/delete_button_selector"
                    android:text="@string/all_favs"
                    android:drawableStart="@drawable/ic_baseline_select_all_24"
                    android:drawableTint="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:textSize="12sp"
                    >

                </Button>
            </RelativeLayout>
            <RelativeLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                >
                <Button
                    android:id="@+id/button_delete"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="@drawable/delete_button_selector"
                    android:text="@string/del_favs"
                    android:drawableStart="@drawable/ic_delete_black_24dp"
                    android:drawableTint="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    >

                </Button>
            </RelativeLayout>
        </GridLayout>
    </GridLayout>
</RelativeLayout>